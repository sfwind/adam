<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="scheduler"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="sendMessageTrigger"/>
                <ref bean="sendHighPriorityMessageTrigger"/>
                <ref bean="resendMessageTrigger"/>
            </list>
        </property>
        <property name="schedulerContextAsMap">
            <map>
                <entry key="timeout" value="3000"/>
            </map>
        </property>
    </bean>

    <bean name="sendMessageJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass"
                  value="com.dianping.ba.es.qyweixin.adapter.job.SendMessageJob"/>
        <property name="applicationContextJobDataKey" value="applicationContext"/>
    </bean>

    <bean name="sendHighPriorityMessageJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass"
                  value="com.dianping.ba.es.qyweixin.adapter.job.SendHighPriorityMessageJob"/>
        <property name="applicationContextJobDataKey" value="applicationContext"/>
    </bean>

    <bean name="resendMessageJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass"
                  value="com.dianping.ba.es.qyweixin.adapter.job.ResendMessageJob"/>
        <property name="applicationContextJobDataKey" value="applicationContext"/>
    </bean>

    <bean id="sendMessageTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="sendMessageJob"/>
        <property name="cronExpression" value="${qyweixin-adapter-service.sendmessage.cron}"/>
    </bean>

    <bean id="sendHighPriorityMessageTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="sendHighPriorityMessageJob"/>
        <property name="cronExpression" value="${qyweixin-adapter-service.sendhighprioritymessage.cron}"/>
    </bean>

    <bean id="resendMessageTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="resendMessageJob"/>
        <property name="cronExpression" value="${qyweixin-adapter-service.resendmessage.cron}"/>
    </bean>

    <bean id="threadPool" class="com.dianping.ba.es.qyweixin.adapter.util.SenderThreadPool" destroy-method="destroy"/>
</beans>
